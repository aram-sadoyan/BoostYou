<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:fresco="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/white"
	android:animateLayoutChanges="true"
	>


	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@+id/top_backgroundRounded"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:background="@drawable/drawable_round_parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="@id/horizontalRecView"/>


	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/appBarContainer"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:gravity="right"
		android:orientation="horizontal"
		app:layout_constraintTop_toTopOf="parent">

		<com.facebook.drawee.view.SimpleDraweeView
			android:id="@+id/logOutIcView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginStart="18dp"
			android:layout_marginLeft="18dp"

			android:background="@drawable/ic_back"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent" />


		<TextView
			android:id="@+id/coinCountTxtView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="100"
			android:background="@drawable/drawable_coin_count_stroke"
			android:textColor="@color/black_22"
			android:textSize="12sp"
			android:layout_marginRight="8dp"
			android:layout_marginEnd="8dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/ic_coins_top"
			app:layout_constraintStart_toEndOf="@id/logOutIcView"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintHorizontal_chainStyle="packed"/>

		<ImageView
			android:id="@+id/ic_coins_top"
			android:layout_width="22dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:src="@drawable/coin"
			app:layout_constraintEnd_toStartOf="@id/addCoinTxtView"
			app:layout_constraintStart_toEndOf="@id/coinCountTxtView"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"/>

		<ImageView
			android:id="@+id/addCoinTxtView"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:layout_gravity="center"
			android:layout_marginTop="4dp"
			android:layout_marginEnd="26dp"
			android:layout_marginRight="26dp"
			android:background="@drawable/buy_coin"
			android:includeFontPadding="false"
			android:textAlignment="center"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
	
	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@+id/avatarImgView"
		android:layout_width="74dp"
		android:layout_height="74dp"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/appBarContainer"
		fresco:roundAsCircle="true" />
	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@+id/avatar_selected_img"
		android:layout_width="78dp"
		android:layout_height="78dp"
		android:background="@drawable/drawabale_avatar_circle_gradient"
		android:layout_marginLeft="14dp"
		android:layout_marginStart="14dp"
		android:layout_marginTop="14dp"
		android:visibility="gone"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/appBarContainer"
		fresco:roundAsCircle="true" />
	
	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		app:layout_constraintStart_toEndOf="@id/avatarImgView"
		app:layout_constraintTop_toBottomOf="@id/appBarContainer"
		app:layout_constraintBottom_toBottomOf="@id/avatarImgView">

		<TextView
			android:id="@+id/usernameTxtView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textColor="@color/red_fd"
			android:textSize="18sp"
			android:text="aramsadoy" />

		<com.facebook.drawee.view.SimpleDraweeView
			android:id="@+id/followIc"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:background="@drawable/follower"
			android:layout_below="@id/usernameTxtView"
			/>

		<TextView
			android:id="@+id/followCount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:layout_marginTop="4dp"
			android:text="200"
			android:layout_marginStart="12dp"
			android:layout_marginLeft="12dp"
			android:textColor="@color/yel_fc"
			android:layout_below="@id/usernameTxtView"
			android:layout_toRightOf="@id/followIc"
			android:layout_toEndOf="@id/followIc"
			/>



	</RelativeLayout>



	<TextView
		android:id="@+id/noPostText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="You have No Posts"
		android:textSize="18dp"
		android:visibility="visible"
		android:textColor="@color/purple"
		app:layout_constraintBottom_toTopOf="@id/shadowView"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/avatarImgView" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/horizontalRecView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="64dp"
		android:layout_marginTop="16dp"
		android:paddingBottom="26dp"
		app:layout_constraintBottom_toTopOf="@id/shadowView"
		app:layout_constraintTop_toBottomOf="@id/avatarImgView" />



	<ProgressBar
		android:id="@+id/avatarProgressBar"
		android:progressDrawable="@drawable/primary_progress_drawable"
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_marginTop="8dp"
		android:layout_marginStart="6dp"
		android:layout_marginLeft="6dp"
		android:layout_marginEnd="6dp"
		android:layout_marginRight="6dp"
		android:layout_width="0dp"
		android:layout_height="2dp"
		android:progress="99"
		android:visibility="gone"
		app:layout_constraintTop_toBottomOf="@id/avatarImgView"
		app:layout_constraintStart_toStartOf="@id/avatarImgView"
		app:layout_constraintEnd_toEndOf="@id/avatarImgView" />

	<View
		android:id="@+id/dotView"
		android:layout_width="8dp"
		android:layout_height="8dp"
		android:layout_marginTop="4dp"
		android:visibility="gone"
		android:background="@drawable/selector_avatar_dot"
		app:layout_constraintStart_toEndOf="@id/avatarImgView"
		app:layout_constraintTop_toBottomOf="@id/avatarImgView" />

	<View
		android:id="@+id/shadowView"
		android:layout_width="match_parent"
		android:layout_height="4dp"
		app:layout_constraintTop_toBottomOf="@id/horizontalRecView" />


	<ScrollView
		android:id="@+id/scrollView"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginBottom="4dp"
		app:layout_constraintBottom_toTopOf="@id/addContainer"
		app:layout_constraintTop_toBottomOf="@id/shadowView">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:id="@+id/bannerContainer"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_margin="16dp"
				app:layout_constraintBottom_toTopOf="@id/scrollView"
				app:layout_constraintTop_toBottomOf="@id/shadowView">

				<com.facebook.drawee.view.SimpleDraweeView
					android:id="@+id/bannerImgView"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:scaleType="centerCrop"
					fresco:viewAspectRatio="2.2"
					fresco:roundBottomLeft="true"
					fresco:roundBottomRight="true"
					fresco:roundTopRight="true"
					fresco:roundedCornerRadius="20dp"/>

				<View
					android:id="@+id/shadowView2"
					android:layout_width="match_parent"
					android:layout_height="4dp"
					android:visibility="invisible"
					android:background="@drawable/shadow"
					app:layout_constraintTop_toBottomOf="@id/horizontalRecView" />

			</LinearLayout>


			<LinearLayout
				android:id="@+id/offerContainer"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical" />

			<com.facebook.drawee.view.SimpleDraweeView
				android:id="@+id/bottomImgView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:scaleType="centerCrop"
				android:padding="36dp"
				fresco:viewAspectRatio="2.2"/>

			<TextView
				android:id="@+id/termsConditionTxtView"
				android:layout_margin="16dp"
				android:text="@string/messageWithLink"
				android:layout_width="match_parent"
				android:layout_gravity="center"
				android:gravity="center"
				android:layout_height="wrap_content"/>

		</LinearLayout>


	</ScrollView>


